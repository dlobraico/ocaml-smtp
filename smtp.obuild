name: smtp
version: 0.1
description:
        SMTP client library
licence: ISC
authors: Vincent Bernardoff
obuild-ver: 1

Flag unix
        description: build the UNIX backend
        default: false

Flag lwt
        description: build the Lwt backend
        default: false

Flag async
        description: build the Async backend
        default: false

library smtp
        modules: Smtp
        src-dir: lib

library smtp_unix
        buildable: $unix
        modules: Smtp_unix
        builddepends: smtp, unix
        src-dir: unix

library smtp_lwt
        buildable: $lwt
        modules: Smtp_lwt
        builddepends: smtp, lwt, lwt.unix
        src-dir: lwt

library smtp_async
        buildable: $async
        modules: Smtp_async
        builddepends: smtp, asynx
        src-dir: asynx

test test_lwt
        mainis: test_lwt.ml
        builddepends: smtp_lwt
        src-dir: test
        rundir: test

test test_unix
        mainis: test_unix.ml
        builddepends: smtp_unix
        src-dir: test
        rundir: test

test test_async
        mainis: test_async.ml
        builddepends: smtp_async
        src-dir: test
        rundir: test
